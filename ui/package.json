{
  "name": "cards-against-containers",
  "private": true,
  "description": "Pick randomly selected question and answer from a deck of cards against containers",
  "version": "1.0.0",
  "author": "Clare So",
  "dependencies": {
    "@material-ui/core": "4.11.2",
    "@material-ui/icons": "4.11.2",
    "@material-ui/styles": "4.11.2",
    "axios": "0.21.1",
    "gatsby": "^2.29.3",
    "gatsby-image": "^2.8.0",
    "gatsby-plugin-manifest": "^2.9.0",
    "gatsby-plugin-material-ui": "2.1.10",
    "gatsby-plugin-offline": "^3.7.0",
    "gatsby-plugin-react-helmet": "^3.7.0",
    "gatsby-plugin-sharp": "^2.11.1",
    "gatsby-source-filesystem": "^2.8.0",
    "gatsby-transformer-sharp": "^2.9.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/plugin-transform-runtime": "7.12.10",
    "@babel/preset-env": "7.12.11",
    "@babel/preset-react": "7.12.10",
    "@testing-library/cypress": "7.0.3",
    "@testing-library/jest-dom": "5.11.8",
    "@testing-library/react": "11.2.2",
    "@types/jest": "26.0.19",
    "axe-core": "4.1.1",
    "axios-mock-adapter": "1.19.0",
    "babel-jest": "26.6.3",
    "cypress": "6.2.1",
    "cypress-axe": "0.12.0",
    "eslint": "7.17.0",
    "eslint-plugin-cypress": "2.11.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-jest-dom": "3.6.5",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "firebase-tools": "8.18.0",
    "husky": "4.3.7",
    "jest": "26.6.3",
    "kill-port": "1.6.1",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "react-test-renderer": "17.0.1",
    "start-server-and-test": "1.11.7",
    "wait-on": "5.2.1"
  },
  "keywords": [
    "Cards Against Containers"
  ],
  "license": "CC BY-SA",
  "scripts": {
    "build": "gatsby clean; gatsby build",
    "clean": "gatsby clean",
    "cy:open": "npx cypress open",
    "cy:run": "npx cypress run; npx cypress run --browser chrome; npx cypress run --browser firefox",
    "develop": "gatsby develop",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "start": "npm run start-rest-api; npm run develop",
    "start:ci": "firebase serve --port 8000 & wait-on http://localhost:8000",
    "start-rest-api": "kill-port --port 8080; cd ../rest-api; go build; go test; ./cards-against-containers-rest-api & wait-on http-get://localhost:8080/api/v1/answer",
    "stop": "kill-port --port 8080; kill-port --port 8000; kill-port --port 5000",
    "test": "npm run test:unit; npm run test:e2e",
    "test:e2e": "start-server-and-test start http://localhost:8000 cy:run",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clarmso/cards-against-containers/"
  },
  "bugs": {
    "url": "https://github.com/clarmso/cards-against-containers/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,json,md}": "pretty-quick --staged"
  }
}
